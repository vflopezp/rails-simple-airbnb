<div class="banner" id="banner-show" style="height: 350px; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @flat.picture_url %>); background-size: cover; background-position: center;">
  <div class="container">
    <div class="row" id="grid-show">
      <div class="col-lg-8">
        <div class="container bg-light p-4 rounded-lg my-3">
          <h1><%= @flat.name %></h1>
          <p><%= @flat.address %></p>
        </div>
        <div class="container bg-light p-4 rounded-lg">
          <h3>A bit more about this flat...</h3>
          <p><%= @flat.description %></p>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="container bg-light p-4 rounded-lg my-3">
          <h6>Book this place!</h6>
          <form>
            <div class="input-group mb-2 mr-sm-2">
              <div class="input-group-prepend">
                <div class="input-group-text">From:</div>
              </div>
              <input type="text" class="form-control" id="frominput" placeholder="11/11/2020">
            </div>
            <div class="input-group mb-2 mr-sm-2">
              <div class="input-group-prepend">
                <div class="input-group-text">To:</div>
              </div>
              <input type="text" class="form-control" id="toinput" placeholder="12/11/2020">
            </div>
            <button type="submit" class="btn btn-success mb-2">Book</button>
          </form>
        </div>
        <div class="container bg-light p-4 rounded-lg">
          <h3>Details</h3>
          <h6>
            <i class="fas fa-user-friends"><%= @flat.number_of_guests %></i>
            <i class="fas fa-euro-sign px-2"><%= @flat.price_per_night %></i>
          </h6>
        </div>
        <div class="container-fluid justify-content-between bg-light p-4 rounded-lg my-3">
          <p>Share</p>
          <h3>
            <i class="fab fa-facebook-square"></i>
            <i class="fab fa-twitter-square"></i>
            <i class="fab fa-pinterest-square"></i>
            <i class="fas fa-envelope-square"></i>
          </h3>
        </div>
      </div>
    </div>
  </div>
</div>
